<h1>Add a dose to <%=@cocktail.name %></h1>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.submit "add a dose", class: "btn btn-primary" %>
<% end %>


<%= link_to '<i class="fas fa-undo"></i> Back to Cocktails</i>'.html_safe,cocktails_path %>

